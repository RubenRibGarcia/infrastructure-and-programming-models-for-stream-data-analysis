version: '3.7'
services:

    zookeeper:
        image: zookeeper:3.6.0
        container_name: zookeeper
        restart: always
        ports:
            - 2181:2181

    nimbus:
        image: impads/storm:2.2.0
        container_name: nimbus
        command: storm nimbus
        restart: always
        volumes:
            - "./storm.yaml:/conf/storm.yaml"
        ports:
            - 6627:6627
            - 8000:8000

    nimbus-ui:
        image: impads/storm:2.2.0
        container_name: nimbus-ui
        command: storm ui
        restart: always
        volumes:
            - "./storm.yaml:/conf/storm.yaml"
        ports:
            - 8080:8080

networks:
  default:
    external:
      name: spds-network
