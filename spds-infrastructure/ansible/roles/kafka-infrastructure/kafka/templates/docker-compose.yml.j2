version: '3.7'
services:

    kafka:
        image: wurstmeister/kafka:2.12-2.4.1
        ports:
            - "9092:9092"
            - "29092:29092"
        container_name: kafka
        environment:
            HOSTNAME_COMMAND:
                "echo $$HOSTNAME"
            PORT_COMMAND:
                "docker port $$(hostname) 9092/tcp | cut -d: -f2"
            KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: "INSIDE:PLAINTEXT,OUTSIDE:PLAINTEXT"
            KAFKA_ADVERTISED_LISTENERS: "INSIDE://{{ kafka_services.kafka_internal_address }}:29092,OUTSIDE://{{ kafka_services.kafka_internal_address }}:_{PORT_COMMAND}"
            KAFKA_LISTENERS: "INSIDE://:29092,OUTSIDE://:_{PORT_COMMAND}"
            KAFKA_INTER_BROKER_LISTENER_NAME: INSIDE
            KAFKA_ZOOKEEPER_CONNECT: {{ kafka_services.zookeeper_internal_address }}:2181
        volumes:
            - /var/run/docker.sock:/var/run/docker.sock
