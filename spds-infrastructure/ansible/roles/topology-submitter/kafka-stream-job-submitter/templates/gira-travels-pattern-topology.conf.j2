topology {
    parallelism = {{ kafka_stream_configs_vars.parallelism }},
    until_phase = {{ kafka_stream_configs_vars.until_phase }}
}
kafka{
    stream {
        bootstrap_servers = "{{ kafka_bootstrap_server }}"
        application {
            id = "gira-travels-pattern"
        }
    }
}
redis {
    mocked = {{ kafka_stream_configs_vars.redis.mocked }}
    host = {{ kafka_stream_configs_vars.redis.host }}
    port = 6379
}
metrics {
    statsd {
        host = telegraf
        port = 8125
        agent = TELEGRAF
    }
}